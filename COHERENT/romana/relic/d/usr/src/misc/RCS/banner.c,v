void
banner(word, pad)
unsigned char *word;
{
	register j, f, i;
	unsigned char c;
	register unsigned char *s;

	putchar('\n');
	for(i = 0; i < 9; i++) {
		for(j = 0; j < pad; j++)
			putchar(' ');
		for(s = word; c = *s; s++) {
			f = ((c <= ' ') || (c & 0x80)) ? 0 : font[c - ' '][i];
			for(j = 0x80; j; j >>= 1)
				putchar((f & j) ? c : ' ');
		}
		putchar('\n');
	}
}
