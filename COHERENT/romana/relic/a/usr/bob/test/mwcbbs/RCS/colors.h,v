@/* colors.h: This files contains the ansi escape sequences to
 * generate colors on a console.
*/


#define RESET "[0m"
#define UNDERLINE "[4m"

/* FOREGROUND COLORS */

#define BLACK "[30m"
#define RED "[31m"
#define GREEN "[32m"
#define BROWN "[33m"
#define BLUE "[34m"
#define MAGENTA "[35m"
#define CYAN "[36m"
#define WHITE "[37m"

/* BACKGROUND COLORS */

#define BLACKB "[40m"
#define REDB "[41m"
#define GREENB "[42m"
#define BROWNB "[43m"
#define BLUEB "[44m"
#define MAGENTAB "[45m"
#define CYANB "[46m"
#define WHITEB "[47m"


/* BORDER COLORS */

#define BRBLACK "[50m"
#define BRRED "[51m"
#define BRGREEN "[52m"
#define BRBROWN "[53m"
#define BRBLUE "[54m"
#define BRMAGENTA "[55m"
#define BRCYAN "[56m"
#define BRWHITE "[57m"
@
