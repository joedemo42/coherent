% fract_arrow.ps 11/10/90
% PostScript Language Tutorial and Cookbook, page 74

% Variables & procedures
/depth 0 def
/maxdepth 10 def
/down {/depth depth 1 add def} def
/up {/depth depth 1 sub def} def

% Print a vertical line
/DoLine
{
	0 144 rlineto currentpoint
	stroke translate 0 0 moveto
} def

% Print a fractal arrow
/FractArrow
{
	gsave
	.7 .7 scale		% reduce scale
	10 setlinewidth		% set line width
	down DoLine		% print line
	depth maxdepth le	% depth < maxdepth?
	{
		135 rotate FractArrow
		-270 rotate FractArrow
	} if
	up
	grestore
} def

% Begin program
300 400 moveto
FractArrow
stroke
showpage
