% lib/caption2.ps 1/7/91
% Same as caption.ps, except does not select font.

% Caption.
% The flag is -1 to left justify, 0 to center, 1 to right justify.
% str flag x y caption -
/caption
{
	gsave
	moveto
	/captionflag exch def
	captionflag 0 ge
	{
		dup stringwidth pop		% caption width
		captionflag 0 eq
		{
			2 div			% Center.
		} if
		neg 0 rmoveto
	} if
	show
	grestore
} bind def
% end of caption.ps
