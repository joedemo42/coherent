% moire.ps 4/15/91
% Cf. Gombrich p. 93, fig. 108, after H. W. Franke.

/inch { 72 mul } bind def

/height 9 inch def
/width 6.5 inch def
/halfwidth width 2 div def
/dx halfwidth 50 div def		

/triangle
{
	dx 4 mul dx 2 mul halfwidth
	{
		/d exch def
		newpath
		d 0 moveto
		0 height lineto
		d dx add 0 lineto
		closepath
		stroke
		newpath
		d neg 0 moveto
		0 height lineto
		d dx add neg 0 lineto
		closepath
		stroke
	} for
} bind def

1 inch 1 inch translate		% Center 6.5 x 9 output on 8.5 x 11 page.
.01 setlinewidth
halfwidth 0 translate		% To bottom center.
triangle
0 height translate		% To top center.
180 rotate			% Flip over.
triangle

showpage

% end of moire.ps
