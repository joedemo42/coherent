% spiral.ps 12/8/90
% Requires lib/caption.ps.

/inch { 72 mul } bind def
/square			% side square -
{
	newpath
	0 0 moveto
	dup dup
%	dup
	0 rlineto
	0 exch rlineto
	neg 0 rlineto
	closepath
	gsave 0 setgray stroke grestore
%	cvi 4 mod 6 add 10 div setgray fill
} bind def

(spiral 12/8/90) 0 4.25 inch 1 inch caption

0.02 setlinewidth
/delta .08 inch def
/delsq delta delta mul def
/side 7.5 inch def

.5 inch 1.5 inch translate
{	% loop
	side square
	delta side ge { exit } if
	0 delta translate
	0 0 moveto
	/side side delta sub def
	delta side atan neg rotate
	/side side side mul delsq add sqrt def
} loop

showpage

% end of spiral.ps
